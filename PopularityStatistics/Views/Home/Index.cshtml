@{

    ViewData["Title"] = "Построение облака";
    Layout = "_Layout";
}

<form class="card p-2" method="post" enctype="multipart/form-data" action="/starttask/index">
    <br />
    <br />
    <label for="user">Введите id (адрес страницы пользователя ПОСЛЕ / - например ivan_ivanov или id1111111 или 111111) с которого начнется поиск</label>
    <input type="text" class="form-control" id="user" name="User" required aria-describedby="user">
    <br />
    Показать статистику по
    <br />
    <select id="category" required name="Filter" class="form-control">
        <option selected disabled value=''>Выберите категорию...</option>
        <option value="Books">Книгам</option>
        <option value="Movies">Фильмам</option>
        <option value="TV">Тв передачам</option>
        <option value="Music">Музыке</option>
    </select>
    <br />
    <select id="sex" required name="Sex" class="form-control">
        <option selected value='Both'>Обоим полам</option>
        <option value="Man">мужчинам</option>
        <option value="Woman">женщинам</option>
    </select>
    <br />
    <div class="form-group row">
        <div class="col-sm-4">
            <label>
                <input type="checkbox" value="true" name="AgeIsNotImportant"> Возраст не важен
            </label>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-sm-4">
            <label for="from">От</label>
            <input type="number" class="form-control" id="from" name="FromAge" aria-describedby="from" placeholder="Введите минимальный возраст">
        </div>
        <div class="col-sm-4">
            <label for="to">До</label>
            <input type="number" class="form-control" id="to" name="ToAge" aria-describedby="to" placeholder="Введите максимальный возраст">
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Высота картинки в пикселях (рекомендуется от 1000):</label>
            <input type="number" class="form-control form-control-sm" name="Height" required />
        </div>
        <div class="col-sm-2">
            <label for="Width">Ширина картинки в пикселях (рекомендуется от 1000):</label>
            <input type="number" id="Width" name="Width" required class="form-control form-control-sm" />
        </div>
        <div class="col-sm-2">
            <label>Минимальный шрифт (рекомендуется от 10):</label>
            <input type="number" name="MinFont" class="form-control form-control-sm" required />
        </div>
        <div class="col-sm-2">
            <label>Максимальный шрифт (рекомендуется до 40):</label>
            <input type="number" class="form-control form-control-sm" name="MaxFont" required />
        </div>
    </div>
    <div class="form-group row">

    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            <label for="FontName">Выберите шрифт</label>
            <select for="FontName" id="FontName" class="form-control" name="FontName">
                <option value="Arial">Arial</option>
                <option value="Serif">Serif</option>
            </select>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-sm-4">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="Colors" value="Red">Красный
            </label>
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="Colors" value="Green">Зеленый
            </label>
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="Colors" value="Yellow">Желтый
            </label>
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="Colors" value="Violet">Фиолетовый
            </label>
        </div>
    </div>

    <br />
    <input type="submit" class="btn" value="Отправить" />
</form>